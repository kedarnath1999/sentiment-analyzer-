{
    "manifest_version": 2,
    "name": "sentiment analyzer",
    "version": "0.1",
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"]
      }
    ],
    "permissions": ["tts"],
    "background":{
      "scripts":["background.js"]
    },
    "icons":{
      "128":"icon128.png",
      "48":"icon48.png",
      "16":"icon16.png"
    },
      "browser_action": {
      "default_icon": "icon16.png",
      "default_popup": "sketch/index.html",
      "default_title": "sentiment analyzer"
    }
  }